<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include("include/css.ejs") %>
</head>

<body id="bg">
    <div id="loading-icon-bx"></div>
    <div class="account-form">
        <div class="account-head" style="background-image:url(assets/images/background/bg2.jpg);">
            <a href="/"><img src="assets/images/logo-white-2.png" alt=""></a>
        </div>
        <div class="account-form-inner">
            <div class="account-container">
                <div class="heading-bx left">
                    <h2 class="title-head">Forgot Password</h2>
                    <p>Don't have an account? <a href="register">Create one here</a></p>
                </div>
                <% if(typeof msg!='undefined' ){ if(flag==0){ %>
                    <div class="alert alert-success">
                        <strong>
                            <%= msg %>
                        </strong>
                    </div>
                    <% } else{ %>
                        <div class="alert alert-danger">
                            <strong>
                                <%= msg %>
                            </strong>
                        </div>
                        <% } } %>
                <form class="contact-bx" action="/forgot-password" method="POST">
                    <div class="row placeani">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>Your Email</label>
                                    <input name="email" type="email" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group form-forget">
                                <a href="login" class="ml-auto">Click here to Login</a>
                            </div>
                        </div>
                        <div class="col-lg-12 m-b30">
                            <button name="submit" type="submit" value="Submit" class="btn button-md">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include("include/js.ejs") %>
</body>

</html>